---
import { format } from 'date-fns';

interface Props {
  class?: string;
  title: string;
  date: Date | string | number;
  readingTime?: string;
}

const { class: className, title, date, readingTime } = Astro.props;
---

<div class={className}>
  <h1 class="font-display text-5xl font-bold">{title}</h1>
  <div class="text-text-2">
    <span>{format(date, 'MMM dd, yyyy')}</span>
    {readingTime && <span>Â· {readingTime}</span>}
  </div>
</div>
