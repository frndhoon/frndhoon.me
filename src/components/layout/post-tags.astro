---
import { cn } from '~/lib/utils';

interface Props {
  tags: string[];
  class?: string;
}

const { tags, class: className } = Astro.props;
---

{
  tags.length > 0 && (
    <div class={cn('text-text-2', className)}>
      <span>Tags:</span>
      {tags.map((tag) => (
        <span class="ml-2 inline-block">
          <a class="link text-text-1" href={`/?tag=${tag}`}>
            {tag}
          </a>
        </span>
      ))}
    </div>
  )
}
